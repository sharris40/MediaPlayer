<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uco.map2016.mediaplayer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_player"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uco.map2016.mediaplayer.MainActivity" />
        </activity>
        <activity
            android:name=".OpenActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uco.map2016.mediaplayer.MainActivity" />

            <service android:name=".NotificationService" />
        </activity>
        <activity
            android:name=".ListActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uco.map2016.mediaplayer.MainActivity" />
        </activity>
        <activity
            android:name=".MusicActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uco.map2016.mediaplayer.MainActivity" />
        </activity>
        <activity
            android:name=".VideoActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uco.map2016.mediaplayer.MainActivity" />
        </activity>

        <service
            android:name=".services.SearchService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".services.ProviderManagerService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".services.providers.SpotifyService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".services.providers.SpotifyLoginActivity"></activity>
    </application>

</manifest>
